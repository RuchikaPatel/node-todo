<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Todo List APP test</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                background-color: #f4f4f4;
                color: #333;
                margin: 0;
                padding: 0;
            }

            h1 {
                background-color: #230576;
                color: white;
                margin: 0;
                padding: 20px;
                text-align: center;
            }

            ul {
                list-style: none;
                padding: 0;
            }

            ul li {
                background: #83d6dc;
                border: 1px solid #ddd;
                margin-bottom: 10px;
                padding: 10px;
                position: relative;
            }

            ul li a {
                color: #333;
                text-decoration: none;
                font-weight: bold;
            }

            ul li a:hover {
                color: #365ddc;
            }

            .delete-btn {
                color: red;
                position: absolute;
                right: 10px;
                top: 10px;
            }

            .edit-btn {
                color: #ee0edf;
                position: absolute;
                right: 40px;
                top: 10px;
            }

            form {
                background: #a8c9da;
                padding: 20px;
                margin-top: 20px;
            }

            label {
                display: block;
                margin-bottom: 10px;
            }

            input[type="text"] {
                width: 100%;
                padding: 10px;
                margin-bottom: 10px;
                border: 1px solid #ddd;
            }

            input[type="submit"] {
                background-color: #610dea;
                color: white;
                border: none;
                padding: 10px 20px;
                cursor: pointer;
            }

            input[type="submit"]:hover {
                background-color: #11b8d5;
            }
        </style>
    </head>


    <body>
        <h1>Ruchika Patel's To-Do List </h1>
    
        <ul>
            <% todolist.forEach(function(todo, index) { %>
            <li>
                <a href="/todo/delete/<%= index %>" class="delete-btn">✘</a>
                <a href="/todo/<%= index %>" class="edit-btn">✎</a>
                <%- todo %>
            </li>
            <% }); %>
        </ul>

        <form action="/todo/add/" method="post">
            <p>
                <label for="newtodo">What should I do?</label>
                <input type="text" name="newtodo" id="newtodo" autofocus />
                <input type="submit" value="Add" />
            </p>
        </form>
    </body>
</html>
